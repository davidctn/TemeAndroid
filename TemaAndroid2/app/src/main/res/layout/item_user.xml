<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#3410c4"
    android:padding="@dimen/default_space_padding"
    android:layout_margin="@dimen/default_space_padding">

    <TextView
        android:id="@+id/username_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Description"
        android:textSize="@dimen/title_dimension"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/email_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/username_id"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Description"
        android:textSize="@dimen/sub_title_dimension"
        />

    <ImageView
        android:id="@+id/arrow_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/abc_vector_test"
        android:rotation="270"
        />

    <TextView
        android:id="@+id/post_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_id"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/body_dimension"
        android:visibility="gone"
/>

    <TextView
        android:id="@+id/post_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/post_title"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="2"
        android:textSize="@dimen/body_dimension"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>