<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#b75abf"
    android:padding="@dimen/default_space_padding"
    android:layout_margin="@dimen/default_space_padding">

    <TextView
        android:id="@+id/title_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Description"
        android:textSize="@dimen/title_dimension"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/body_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_id"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Description"
        android:textSize="@dimen/body_dimension"
        android:ellipsize="end"
        android:maxLines="2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>